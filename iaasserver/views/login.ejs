<% include ./layouts/head %>
<div class="login-form">
    <img src="assets/Logo_bubook.png" id="logo_bubook"></img>
    <form action="/login/local" method="POST">
        <% if (config.authentication.find(auth => auth === 'local')) { %>
            <div class="form-group ">
                <input type="text" class="form-control" name="username" placeholder="Nombre de usuario " id="UserName">
                <i class="fa fa-user"></i>
            </div>
            <div class="form-group log-status">
                <input type="password" class="form-control" name="password" placeholder="Contraseña " id="Password">
                <i class="fa fa-lock"></i>
            </div>
            <span class="alert">Datos erróneos</span>
            <a class="link" href="#">¿Has olvidado la contraseña?</a>
            <input type="submit" class="log-btn" id="boton_local" value="Iniciar sesión"></input>
        <% } %>
        <% if (config.authentication.find(auth => auth === 'github')) { %>
            <button type="button" class="log-btn" id="boton_github">Iniciar con Github &nbsp;<i class="fa fa-github fa-lg" aria-hidden="true"></i></button>
        <% } %>
    </form>
</div>
<% include ./layouts/footer %>
